enum ActivityType {
  CREATE
  UPDATE
  DELETE
  EMAIL
  OTHER
}

model Activity {
  id          String       @id @default(uuid(7))
  createdAt   DateTime     @default(now())
  type        ActivityType
  description String?
  subjectType String
  subjectId   String?
  causerId    String?
  causer      Account?     @relation(fields: [causerId], references: [id], onDelete: SetNull)
  metadata    Json         @default("{}")
}
